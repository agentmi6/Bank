@model ATM.Models.PrintStatementViewModel

@{
    ViewBag.Title = "PrintStatement";
}

<h2>PrintStatement</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Account#")
        </th>
        <th>
            @Html.DisplayName("First Name")
        </th>
        <th>
            @Html.DisplayName("Last Name")
        </th>
        <th>
            @Html.DisplayName("Amount $")
        </th>       
        <th></th>
    </tr>

    @foreach (var acc in Model._checkingAccounts)
    {
        foreach (var transaction in acc.Transactions)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => acc.AccountNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => acc.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => acc.LastName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => transaction.Amount)
                </td>               
                <td>
                    @Html.ActionLink("Details", "Details", "CheckingAccount", new { checkingAccountId = ViewBag.CheckingAccountId }, null)
                </td>
            </tr>
        }
    }
</table>